            嵌套外键 的create 方式
          """
      
          address = AddressSerializer(many=True)
      
          class Meta:
              model = Career
              fields = "__all__"
      
          def create(self, validated_data):
              address_date = validated_data.pop('address')
              career = Career.objects.create(**validated_data)
      
              for item in address_date:
                  address = Address(address=item['address'],
